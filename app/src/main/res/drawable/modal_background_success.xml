<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer with transparent color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Top layer with white background and rounded top-left corner -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>

    <!-- Red rectangle at the upper side, 8dp height -->
    <item
        android:top="0dp"
        android:height="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#007E7E"/>
            <corners android:topLeftRadius="10dp"
                android:topRightRadius="10dp"/>
        </shape>
    </item>
</layer-list>
