<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer with transparent color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Top layer with gradient background and rounded corner -->
    <item>
        <shape android:shape="rectangle">

            <gradient
                android:angle="315"
                android:startColor="#726AF3"
                android:centerColor="#7655EA"
                android:endColor="#7E3ADB"
                android:type="linear" />
            <corners android:radius="50dp"/>
            </shape>
        </item>

</layer-list>
