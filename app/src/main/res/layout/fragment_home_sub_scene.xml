<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".subscenes.HomeSubScene"
    android:padding="14dp"
    android:background="@color/white">

    <!-- SCROLLABLE CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_subscene_welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activities"
                android:textFontWeight="800"
                android:textColor="@color/blue_grey_900"
                android:textSize="16sp"
                android:layout_marginVertical="14dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="24dp"
                        android:paddingTop="24dp">

                        <ImageView
                            android:id="@+id/home_subscene_section_mytutors_icon"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/home_subscene_my_tutors"
                            android:layout_alignParentStart="true"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentEnd="true"
                            android:layout_toEndOf="@id/home_subscene_section_mytutors_icon"
                            android:paddingStart="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="My Tutors"
                                android:textSize="16sp"
                                android:textFontWeight="600"
                                android:textColor="@color/blue_grey_900"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="See all tutors with whom you have booked connections"
                                android:textSize="13sp"
                                android:layout_marginTop="15dp"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <Button
                        android:id="@+id/home_subscene_btn_my_tutors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="25dp"
                        android:paddingEnd="20dp"
                        android:paddingStart="45dp"
                        android:textAlignment="center"
                        style="@style/PrimaryButton"
                        android:text="View Tutors"
                        android:textSize="14sp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="24dp"
                        android:paddingTop="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/home_subscene_section_findtutors_icon"
                            android:paddingEnd="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Find Tutors"
                                android:textSize="16sp"
                                android:textFontWeight="600"
                                android:textColor="@color/blue_grey_900"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Browse through our large collection of highly skilled tutors."
                                android:textSize="13sp"
                                android:layout_marginTop="15dp"/>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/home_subscene_section_findtutors_icon"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/home_subscene_find_tutor"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                    <Button
                        android:id="@+id/home_subscene_btn_find_tutors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="25dp"
                        android:paddingEnd="20dp"
                        android:paddingStart="45dp"
                        android:textAlignment="center"
                        style="@style/PrimaryButton"
                        android:text="View Tutors"
                        android:textSize="14sp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="24dp"
                        android:paddingTop="24dp">

                        <ImageView
                            android:id="@+id/home_subscene_section_becometutor_icon"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/home_subscene_become_tutor"
                            android:layout_alignParentStart="true"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentEnd="true"
                            android:layout_toEndOf="@id/home_subscene_section_becometutor_icon"
                            android:paddingStart="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Become a Tutor"
                                android:textSize="16sp"
                                android:textFontWeight="600"
                                android:textColor="@color/blue_grey_900"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Share your knowledge in American Sign Langauge. Register now, it's free!"
                                android:textSize="13sp"
                                android:layout_marginTop="15dp"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="25dp"
                        android:paddingEnd="20dp"
                        android:paddingStart="45dp"
                        android:textAlignment="center"
                        style="@style/PrimaryButton"
                        android:text="Register"
                        android:textSize="14sp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="24dp"
                        android:paddingTop="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/home_subscene_section_scanner_icon"
                            android:paddingEnd="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Scanner"
                                android:textSize="16sp"
                                android:textFontWeight="600"
                                android:textColor="@color/blue_grey_900"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Aim, Snap, Scan! Convert an ASL hand sign into its alphabet equivalent."
                                android:textSize="13sp"
                                android:layout_marginTop="15dp"/>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/home_subscene_section_scanner_icon"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/home_subscene_try_scanner"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="25dp"
                        android:paddingEnd="20dp"
                        android:paddingStart="45dp"
                        android:textAlignment="center"
                        style="@style/PrimaryButton"
                        android:text="Use Scanner"
                        android:textSize="14sp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- SCROLL RECT MASK -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scrollview_rectmask"/>

</FrameLayout>