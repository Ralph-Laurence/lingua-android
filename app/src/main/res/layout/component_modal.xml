<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/modal_background_info"
    android:id="@+id/custom_modal_background"
    tools:ignore="HardcodedText,ContentDescription">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/modal_icon_info"
        android:id="@+id/custom_modal_icon"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="8dp"
        android:text="Title"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textFontWeight="600"
        android:id="@+id/custom_modal_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        android:text="This Is A Custom Alert Dialog"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"
        android:id="@+id/custom_modal_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            style="@style/SecondaryButton"
            android:layout_marginEnd="5dp"
            android:layout_width="120dp"
            android:text="Cancel"
            android:textSize="14sp"
            android:textColor="#3E3D54"
            android:visibility="invisible"
            android:id="@+id/custom_modal_cancel_button"/>

        <Button
            style="@style/SecondaryButton"
            android:layout_marginStart="5dp"
            android:layout_width="80dp"
            android:text="OK"
            android:textSize="14sp"
            android:textColor="#3E3D54"
            android:id="@+id/custom_modal_ok_button"/>

    </LinearLayout>

</LinearLayout>