<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="PrimaryButtonVariant1" parent="BaseButton">
        <item name="android:background">@drawable/btn_primary_variant1</item>
    </style>

    <style name="PrimaryButton" parent="BaseButton">
        <item name="android:background">@drawable/btn_primary</item>
    </style>

    <style name="SecondaryButton" parent="BaseButton">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textColor">#262539</item>
    </style>

    <style name="WarningButton" parent="BaseButton">
        <item name="android:background">@drawable/btn_warning</item>
        <item name="android:textColor">@color/blue_grey_900</item>
    </style>

    <style name="ModalStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="NavBannerNavItem" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/banner_navbar_item_bg</item>
        <item name="android:textColor">@color/blue_grey_700</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="NavBannerNavItemActive" parent="NavBannerNavItem">
        <item name="android:background">@drawable/banner_navbar_item_active_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="kpi_bar_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="kpi_bar_item_numeric_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="kpi_bar_item_caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="activity_tutor_details_section_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textColor">@color/blue_grey_700</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="btn_show_more">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Show More</item>
        <item name="android:layout_marginVertical">12dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/primary_200</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableEnd">@drawable/baseline_arrow_drop_down_24</item>
    </style>

    <style name="doc_proof_section_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/gradient_rounded_corner</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginVertical">20dp</item>
    </style>

</resources>